{% extends 'base.html.twig' %}

{% block title 'Administrer un bien' %}

{% block body %}

  <div class="container mt-4">
    {% if property.title is not null %}<h1>Editer le bien</h1>
    {% else %}<h1>Ajouter un bien</h1>
    {% endif %}
    
    <div class="mt-4">
      {{form_start(form)}}

      <div class="row">
        <div class="col-md-4">
          {{form_row(form.title)}}
        </div>
        <div class="col-md-4">
          {{form_row(form.price)}}
        </div>
        <div class="col-md-4">
          {{form_row(form.sold)}}
        </div>
      </div>

      {{form_row(form.description)}}

      {# <h4 class="mt-4">Caracteristiques</h4> #}
      <div class="row">
        <div class="col-sm-3">
          {{form_row(form.surface)}}
        </div>
        <div class="col-sm-3">
          {{form_row(form.rooms)}}
        </div>
        <div class="col-sm-3">
          {{form_row(form.bedrooms)}}
        </div>
        <div class="col-sm-3">
          {{form_row(form.heat)}}
        </div>
      </div>

      {# <h4 class="mt-4">Adresse</h4> #}
      <div class="row">
        <div class="col-md-4">
          {{form_row(form.address)}}
        </div>
        <div class="col-md-2">
          {{form_row(form.postcode)}}
        </div>
        <div class="col-md-4">
          {{form_row(form.city)}}
        </div>
        <div class="col-md-2">
        {{form_row(form.floor)}}
        </div>
      </div>

      <div class="mt-3">
        <button class="btn btn-lg btn-primary">Enregistrer</button>
        <a href="{{ path('admin.property.index') }}"
          class="btn btn-lg btn-secondary">Annuler</a>
      </div>

      {{form_end(form)}}
    </div>
  </div>


{% endblock %}