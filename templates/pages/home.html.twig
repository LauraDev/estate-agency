      <div>
        <p> Aucun bien n'est a vendre pour le moment.</p>
      </div>
    {% else %}
      <h2>Les derniers biens a vendre</h2>
      <div class="row flex">
        {% for property in latest %}
          <div class="col-3">
            <div class="card">
              <div class="card-body">
                <div class="card-title">
                  <h3>
                    <a href="{{ path('property.detail', {slug: property.slug, id: property.id} ) }}">{{property.title}}</a>
                  </h3>
                  <p class="card-text">{{property.city}} ({{property.postcode}})</p>
                  <div class="text-primary">{{property.formattedPrice}} â‚¬</div>
                </div>
              </div>
            </div>
